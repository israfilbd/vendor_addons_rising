<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0.0"
                android:endColor="?android:colorAccent"
                android:startColor="?android:colorAccent" />
            <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/system_neutral2_10" />
            <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
            <padding
                android:left="20dp"
                android:right="20dp" />
        </shape>
    </item>
</layer-list>
