<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="6dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
            <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
            <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/system_neutral2_800" />
            <corners
                android:bottomLeftRadius="@*android:dimen/config_dialogCornerRadius"
                android:bottomRightRadius="@*android:dimen/config_dialogCornerRadius"
                android:topLeftRadius="@*android:dimen/config_dialogCornerRadius"
                android:topRightRadius="@*android:dimen/config_dialogCornerRadius" />
            <padding
                android:left="20dp"
                android:right="20dp" />
        </shape>
    </item>
</layer-list>
