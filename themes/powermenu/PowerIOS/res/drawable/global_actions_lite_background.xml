<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:end="24dp"
        android:start="24dp">
        <shape
            android:shape="rectangle"
            android:tint="@*android:color/system_neutral2_900">
            <solid android:color="#66FFFFFF" />
            <corners
                android:bottomLeftRadius="@*android:dimen/config_dialogCornerRadius"
                android:bottomRightRadius="@*android:dimen/config_dialogCornerRadius"
                android:topLeftRadius="@*android:dimen/config_dialogCornerRadius"
                android:topRightRadius="@*android:dimen/config_dialogCornerRadius" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:end="12dp"
        android:start="12dp">
        <shape
            android:shape="rectangle"
            android:tint="@*android:color/system_neutral2_900">
            <solid android:color="#B3FFFFFF" />
            <corners
                android:bottomLeftRadius="@*android:dimen/config_dialogCornerRadius"
                android:bottomRightRadius="@*android:dimen/config_dialogCornerRadius"
                android:topLeftRadius="@*android:dimen/config_dialogCornerRadius"
                android:topRightRadius="@*android:dimen/config_dialogCornerRadius" />
        </shape>
    </item>
    <item android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/system_neutral2_900" />
            <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
        </shape>
    </item>
</layer-list>
